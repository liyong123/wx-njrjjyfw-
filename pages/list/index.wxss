@import "../../styles/common.wxss";
@import "./list-item.wxss";

.picker {
  height: 80rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #E4E3E3;
}

.picker > view {
  display: inline-block;
  vertical-align: top;
  height: 80rpx;
  line-height: 80rpx;
}

.picker-drop {
  position: absolute;
  top: 170rpx;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1px solid #f1f1f1;
}

.picker-drop.hide {
  display: none;
}

.picker-drop.show {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  z-index: 10000
}

.picker-drop > view {
  width: 142rpx;
  height: 142rpx;
}

.loadingmore {
  color: #cccccc;
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  margin-top: 30rpx;
}

.block-content .block {
  background: #FFFFFF;
  box-shadow: 0 0 6rpx 0 rgba(0,0,0,0.06);
  border-radius: 8rpx;
}

.no-order {
  width: 470rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 228rpx;
}

.photo {
  width: 500rpx;
  height: 400rpx;
}

.tip {
  color: #9b9b9b;
}