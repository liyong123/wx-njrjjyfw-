/* pages/findSupplier/index.wxss */
.wrapper {
  height: 100vh;
}

.fix-header {
  position: fixed;
  top:0;
  left: 0;
  /* height: 354rpx; */
  width: 100%;
  background-color: #fafafa;
  z-index: 1;
}

.ad-swiper {
  height: 180rpx;
}
.ad-image {
  height: 100%;
  width: 100%;
}
.ad-close {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  opacity: 0.6;
}

.list-search {
  display: flex;
  height: 64rpx;
  box-sizing: border-box;
  z-index: 20;
  justify-content: center;
  margin: 24rpx 20rpx 0 20rpx;

}

.search-title {
  flex-shrink: 0;
  font-size: 28rpx;
  padding-right: 10rpx;
}

.list-search-box {
  flex:1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 64rpx;
  /* background: #f5f5f5; */
  font-size: 28rpx;
  box-sizing: border-box;
  /* opacity: 0.80; */
  border: 1rpx solid #c2cff6;
  border-radius: 32rpx;
}

.list-search-box input {
  width: 100%;
  height: 64rpx;
  padding-left: 10rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  /* color: #9B9B9B; */
  letter-spacing: 0;
}

.filter-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.filter-icon {
  width: 28rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.filter-container text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #9B9B9B;
  letter-spacing: 0;
}

.sort-list {
  display: flex;
  justify-content: space-between;
  height: 86rpx;
  border-bottom: 1rpx solid #E4E3E3;
  align-items: center;
}

.sort-list .sort-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
}

.sort-list .sort-item text {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #9B9B9B;
  letter-spacing: 0;
}

.sort-list .sort-item .choosed {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #597FF3;
  letter-spacing: 0;
}

.sort-list .sort-item image {
  width: 12rpx;
  height: 18rpx;
  margin-left: 10rpx;
}

.supplier-list-wrapper {
  /* margin-top: 374rpx; */
  background: #fafafa;

  position: absolute;
  left:0;
  right: 0;
  height:auto;
}

.supplier-item-wrapper {
  border: 1rpx solid  #EAEAEA;
  border-radius: 15rpx;
  margin:20rpx 20rpx 0 20rpx;
  background: white;
  box-shadow: 0 0 10rpx 10rpx #f0f5fa;

  padding:0 20rpx;

  margin-bottom:25rpx;
}

.supplier-item-wrapper:last-child {
  margin-bottom: 0;
}

.supplier-item-header {
  border-bottom:2rpx dashed #f5f5f5;

  display: flex;
  align-items: center;
  justify-content: flex-start;

  padding: 15rpx 0 10rpx;

  position: relative;
}

.supplier-item-logo {
  width: 112rpx;
  height: 112rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
  /* border: 1rpx solid #d8d8d8; */
  background: white;
}

.supplier-item-detail {
  padding-top: 10rpx;
}

.supplier-item-name {
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #353f49;
  letter-spacing: 0; 
}

.supplier-item-text{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 1.6;
}

.supplier-item-detail-right {
  position: absolute;
  top: 20rpx;
  right: 10rpx;

  display: flex;
  justify-content: flex-end;
}

.supplier-item-detail-right text {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 1.5;
}

.supplier-item-detail-right-item {
  display: flex;
  align-items: center;
}

.supplier-item-detail-right image {
    width: 22rpx;
    height: 24rpx;
    margin-right:6rpx;
  }

.supplier-item-domains {
  display: flex;
  font-size: 24rpx;
  margin-left:-10rpx;
}

.supplier-item-domains-label {
  min-width: 120rpx;
  white-space: nowrap;
  color:#9B9B9B;
  margin-top: 18rpx;
}
.supplier-item-domains-val {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: space-around;
  margin: 10rpx 0;
}

.domain-item {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color:#8daaf8;

  background: #e4f1ff;
  border-radius: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding:5rpx 20rpx; 
  text-align: center;
  margin: 8rpx 10rpx;

  white-space: nowrap;
}

.load-more{
  color: #9B9B9B;
  text-align: center;
  padding: 20rpx;
}